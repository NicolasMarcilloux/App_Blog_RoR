<%= link_to "All users", :users, class:"btn btn-primary"%>
<br/>
<%= @user.full_name %>
<ul>
	<li><%= @user.email %></li>
</ul>


<h3>Posts</h3>

<ul>
<% @user.posts.each do |p| %>
	<li>
		<%= link_to [@user, p] do %>
			<%= p.title %>
		<% end %>
	</li>
<% end %>
</ul>

<%= link_to 'Posts', user_posts_path(@user), class:"btn btn-primary" %>
<%= link_to 'Edit', edit_user_path(@user), class:"btn btn-warning" %>
<%= link_to 'Delete', user_path(@user), method: :delete, data: {confirm:"Are you sure ?"}, class:"btn btn-danger" %>
