<%= form_for @user do |f| %>
	<div class="form-group">
		<%= f.label :first_name %>
		<%= f.text_field :first_name %>
		<%= f.label :last_name %>
		<%= f.text_field :last_name %>
		<%- if @user.errors[:email].present? %>
			<%= @user.errors[:email].to_sentence %>
		<% end %>

		<%= f.label :email %>
		<%= f.text_field :email %>
		<%= f.submit class:"btn btn-primary" %>
	</div>
<% end %>
