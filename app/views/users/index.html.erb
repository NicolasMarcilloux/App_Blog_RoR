<h2>
	Users List
</h2>


<%= link_to 'Add User', new_user_path(), class: "btn btn-primary" %>


<ul>
<%-@users.each do |user| link_to %>
		<%= link_to user_path(user) do %>
			<li>
			<%= user.full_name %>
				<ul>
					<li><%= user.email %></li>
				</ul>
			</li>
		<% end %>
	<br/>
<% end %>
</ul>
